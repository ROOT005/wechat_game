/**index.wxss**/
page{
  background-image: url("https://wxword.yiqianyun.com/static/images/wxpages/index/stopbg.jpg");
  background-size: 100% auto;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.sqinfo{
  width:300px;
  height: 200px;
  background-image: url(https://wxword.yiqianyun.com/static/images/wxpages/index/sqinfo.png);
  background-size:100%;
  background-repeat: no-repeat;
}
.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
button{
  width: 100px;
  height: 40px;
  line-height: 40px;
  background-image: url(https://wxword.yiqianyun.com/static/images/wxpages/index/sqbutton.png);
  background-size:100% 100%;
  background-repeat: no-repeat;
  font-weight: bold;
}